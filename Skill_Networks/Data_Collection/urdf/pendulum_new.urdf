<?xml version="1.0"?>
<robot name="pendulum">

  <material name="Green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>

    <link name="base">
     
    </link>
    
    <joint name = "joint" type = "continuous">
      <origin xyz="0 0 1.53" rpy="0 0 1.57"/>
      <parent link="base"/>
      <child link="top"/>
      <axis xyz="0 0 1"/>
    </joint>
    
    <link name = "top">
        <inertial>
        <mass value="5000" />
        <origin xyz="0.0 0.0 0" rpy="0 0 0" />
        <inertia  ixx="0.1" ixy="0" ixz="0"
                  iyy="0.1" iyz="0"
                  izz="0.1" />
      </inertial>
      <visual>
          <!-- <origin xyz = "0 0 0" rpy = "0 0 0"/>
          <geometry>
              <box size = "0.5 0.5 0.1"/>
          </geometry> -->
      </visual>
      <collision>
          <origin xyz = "0 0 0" rpy = "0 0 0"/>
          <geometry>
              <box size = "0.5 0.5 0.1"/>
          </geometry>
      </collision>
    </link>
    
    <joint name = "pendulum_joint" type = "continuous">
        <origin xyz="0 0 -0.05" rpy="0 0 0"/>
        <parent link="top"/>
        <child link="rod"/>
    </joint>
    
    <link name = "rod">
      <inertial>
        <mass value="0.0" />
        <origin xyz="0 0 -0.5" rpy="0 0 0" />
        <inertia  ixx="0.1" ixy="0.0" ixz="0.0"
                  iyy="0.1" iyz="0.0"
                  izz="0.1" />
      </inertial>
      <visual>
        <origin xyz="0 0 -0.5" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.005" length="1.0"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 -0.5" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.005" length="1.0"/>
        </geometry>
      </collision>
    </link>
    
    <joint name = "ball_joint" type = "fixed">
        <origin xyz="0 0 -1.0" rpy="0 0 0"/>
        <parent link="rod"/>
        <child link="box"/>
    </joint>
    
    <link name = "box">
        <inertial>
        <mass value="50" />
<!--         <friction value="1.0"/> -->
        <origin xyz="0 0 -0.03" rpy="0 0 0" />
        <inertia  ixx="0.001" ixy="0.0" ixz="0.0"
                  iyy="0.001" iyz="0.0"
                  izz="0.001" />
      </inertial>
      <visual>
        <origin xyz="0 0 -0.03" rpy="0 0 0" />
        <geometry>
          <box size = "0.04 0.04 0.04"/>
        </geometry>
        <material name="Green"/>
      </visual>
      <collision>
        <origin xyz="0 0 -0.03" rpy="0 0 0" />
        <geometry>
          <box size = "0.04 0.04 0.04"/>
        </geometry>
      </collision>
    </link>
    
</robot>
