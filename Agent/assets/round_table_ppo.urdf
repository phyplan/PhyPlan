<?xml version="1.0"?>
<robot name="pendulum">

  <material name="Blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>

  <material name="Yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>

  <material name="Grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

    <link name="base">
      <inertial>
        <mass value="0.01" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia  ixx="100" ixy="0.0" ixz="0.0"
                  iyy="100" iyz="0.0"
                  izz="100" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.25" length="0.05"/>
        </geometry>
        <material name="Yellow"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.25" length="0.05"/>
        </geometry>
      </collision>
    </link>

</robot>
