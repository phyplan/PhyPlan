<?xml version="1.0"?>
<robot name="pendulum">

  <material name="Blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>

  <material name="Yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>

  <material name="Grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="Transparent Grey">
    <color rgba="0.5 0.5 0.5 0.0"/>
  </material>

    <link name="base">

    </link>

    <joint name = "joint" type = "continuous">
      <origin xyz="0 0 0.33" rpy="0 0 0"/>
      <parent link="base"/>
      <child link="top"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name = "top">
        <inertial>
        <mass value="0.000001" />
        <origin xyz="0.0 0.0 0" rpy="0 0 0" />
        <inertia  ixx="0.00001" ixy="0" ixz="0"
                  iyy="0.00001" iyz="0"
                  izz="0.00001" />
      </inertial>
      <visual>
          <origin xyz = "0 0 0" rpy = "0 0 0"/>
          <geometry>
              <box size = "0.01 0.01 0.01"/>
          </geometry>
          <material name="Transparent Grey"/>
      </visual>
      <collision>
          <origin xyz = "0 0 0" rpy = "0 0 0"/>
          <geometry>
              <box size = "0.01 0.01 0.01"/>
          </geometry>
      </collision>
    </link>

    <joint name = "pendulum_joint" type = "continuous">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="top"/>
        <child link="rod"/>
    </joint>

    <link name = "rod">
      <inertial>
        <mass value="0.00000001" />
        <origin xyz="0 0 -0.15" rpy="0 0 0" />
        <inertia  ixx="0.00001" ixy="0.0" ixz="0.0"
                  iyy="0.00001" iyz="0.0"
                  izz="0.00001" />
      </inertial>
      <visual>
        <origin xyz="0 0 -0.15" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.005" length="0.3"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 -0.15" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.005" length="0.3"/>
        </geometry>
      </collision>
    </link>

    <joint name = "ball_joint" type = "fixed">
        <origin xyz="0 0 -0.3" rpy="0 0 0"/>
        <parent link="rod"/>
        <child link="box"/>
    </joint>

    <link name = "box">
        <inertial>
        <mass value="0.5" />
        <friction value="0.0"/>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia  ixx="0.00001" ixy="0.0" ixz="0.0"
                  iyy="0.00001" iyz="0.0"
                  izz="0.00001" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size = "0.03 0.03 0.03"/>
        </geometry>
        <material name="Yellow"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size = "0.03 0.03 0.03"/>
        </geometry>
      </collision>
    </link>

    <joint name = "hook_joint" type = "fixed">
        <origin xyz="-0.07 0.2 0.29" rpy="-1.57 0 0"/>
        <parent link="base"/>
        <child link="hook1"/>
    </joint>

    <link name = "hook1">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0 -0.02" rpy="1.57 0 0" />
        <inertia  ixx="0.00001" ixy="0.0" ixz="0.0"
                  iyy="0.00001" iyz="0.0"
                  izz="0.00001" />
      </inertial>
      <visual>
        <origin xyz="0 0 -0.02" rpy="1.57 0 0" />
        <geometry>
          <cylinder radius="0.005" length="0.04"/>
        </geometry>
        <material name="Yellow"/>
      </visual>
      <collision>
        <origin xyz="0 0 -0.02" rpy="1.57 0 0" />
        <geometry>
          <cylinder radius="0.005" length="0.04"/>
        </geometry>
      </collision>
    </link>

    <joint name = "hook_joint2" type = "fixed">
        <origin xyz="0 -0.04 -0.02" rpy="0 1.57 0"/>
        <parent link="hook1"/>
        <child link="hook2"/>
    </joint>

    <link name = "hook2">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0.06 0.02" rpy="0 0 0" />
        <inertia  ixx="0.00001" ixy="0.0" ixz="0.0"
                  iyy="0.00001" iyz="0.0"
                  izz="0.00001" />
      </inertial>
      <visual>
        <origin xyz="0 0.06 0.02" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.005" length="0.04"/>
        </geometry>
        <material name="Yellow"/>
      </visual>
      <collision>
        <origin xyz="0 0.06 0.02" rpy="0 0 0" />
        <geometry>
          <cylinder radius="0.005" length="0.04"/>
        </geometry>
      </collision>
    </link>

    <joint name = "hook_joint3" type = "fixed">
        <origin xyz="0 0 0.03" rpy="0 0 0"/>
        <parent link="hook2"/>
        <child link="hook3"/>
    </joint>

    <link name = "hook3">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0.05 0.01" rpy="1.57 0 0" />
        <inertia  ixx="0.00001" ixy="0.0" ixz="0.0"
                  iyy="0.00001" iyz="0.0"
                  izz="0.00001" />
      </inertial>
      <visual>
        <origin xyz="0 0.05 0.01" rpy="1.57 0 0" />
        <geometry>
          <cylinder radius="0.005" length="0.02"/>
        </geometry>
        <material name="Yellow"/>
      </visual>
      <collision>
        <origin xyz="0 0.05 0.01" rpy="1.57 0 0" />
        <geometry>
          <cylinder radius="0.005" length="0.02"/>
        </geometry>
      </collision>
    </link>

</robot>
