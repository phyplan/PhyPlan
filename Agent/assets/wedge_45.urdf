<?xml version="1.0"?>
<robot name="wedge">
  <material name="Grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="Yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>

  <material name="Silver">
    <color rgba="0.75 0.75 0.75 1"/>
  </material>

  <material name="Brown">
    <color rgba="0.545 0.271 0.074 1"/>
  </material>

  <material name="Blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>

    <!-- <link name="ground">

    </link>

    <joint name = "joint" type = "continuous">
      <origin xyz="0 0 0" rpy="0 0 1.45"/>
      <parent link="ground"/>
      <child link="base"/>
      <axis xyz="0 0 1"/>
    </joint> -->

  <link name="base">
    <inertial>
      <mass value="0.1" />
      <friction value="10000.0"/>
      <origin xyz="0 0 0.01" rpy="0 0 0" />
      <inertia  ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.01" rpy="0 0 0" />
      <geometry>
        <box size="0.3 0.3 0.02"/>
      </geometry>
      <material name="Yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.01" rpy="0 0 0" />
      <geometry>
        <box size="0.3 0.3 0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name = "joint1" type = "fixed">
    <origin xyz="0 0.14 0.02" rpy="0 0 0"/>
    <parent link="base"/>
    <child link="wall"/>
  </joint>

  <link name="wall">
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0.14 0.14" rpy="0 0 0" />
      <inertia  ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.14" rpy="0 0 0" />
      <geometry>
        <box size="0.3 0.02 0.3"/>
      </geometry>
      <material name="Yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.14" rpy="0 0 0" />
      <geometry>
        <box size="0.3 0.02 0.3"/>
      </geometry>
    </collision>
  </link>

  <joint name = "joint2" type = "fixed">
    <origin xyz="0 -0.14 0.02" rpy="0.785 0 0"/>
    <parent link="base"/>
    <child link="incline"/>
  </joint>

  <link name="incline">
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0.14" rpy="0 0 0" />
      <inertia  ixx="0.1" ixy="0" ixz="0"
                iyy="0.1" iyz="0"
                izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0 0.198 0" rpy="0 0 0" />
      <geometry>
        <box size="0.3 0.396 0.02"/>
      </geometry>
      <material name="Yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0.198 0" rpy="0 0 0" />
      <geometry>
        <box size="0.3 0.396 0.02"/>
      </geometry>
    </collision>
  </link>

  <joint name = "joint3" type = "fixed">
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <parent link="wall"/>
    <child link="handle"/>
  </joint>

  <!-- <joint name = "joint3" type = "contiuous">
    <origin xyz="0.28 -0.01 0.3" rpy="0 0 0"/>
    <parent link="wall"/>
    <child link="handle"/>
    <axis xyz="0 0 1"/>
  </joint> -->

  <link name="handle">
    <inertial>
      <mass value="0.1" />
      <friction value="10000.0"/>
      <origin xyz="0 0 0.30" rpy="0 0 0" />
      <inertia  ixx="0.01" ixy="0" ixz="0"
                iyy="0.01" iyz="0"
                izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0" />
      <geometry>
        <box size="0.1 0.02 0.1"/>
      </geometry>
      <material name="Yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0" />
      <geometry>
        <box size="0.1 0.02 0.1"/>
      </geometry>
    </collision>
  </link>
</robot>